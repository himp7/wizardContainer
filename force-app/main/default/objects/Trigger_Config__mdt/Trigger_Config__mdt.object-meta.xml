<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Trigger Config</label>
    <pluralLabel>Trigger Configs</pluralLabel>
    <visibility>Public</visibility>
    
    <!-- Type Picklist Field -->
    <fields>
        <fullName>Type__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>DeveloperControlled</fieldManageability>
        <label>Type</label>
        <required>true</required>
        <type>Picklist</type>
        <valueSet>
            <restricted>true</restricted>
            <valueSetDefinition>
                <sorted>false</sorted>
                <value>
                    <fullName>Category</fullName>
                    <default>false</default>
                    <label>Category</label>
                </value>
                <value>
                    <fullName>Option</fullName>
                    <default>false</default>
                    <label>Option</label>
                </value>
            </valueSetDefinition>
        </valueSet>
    </fields>
    
    <!-- Value Field -->
    <fields>
        <fullName>Value__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>DeveloperControlled</fieldManageability>
        <label>Value</label>
        <length>255</length>
        <required>true</required>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    
    <!-- Category Field -->
    <fields>
        <fullName>Category__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>DeveloperControlled</fieldManageability>
        <label>Category</label>
        <length>255</length>
        <required>false</required>
        <type>Text</type>
        <unique>false</unique>
        <description>Parent category for Options. Leave blank for Categories.</description>
    </fields>
    
    <!-- Field API Name Field -->
    <fields>
        <fullName>Field_API_Name__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>DeveloperControlled</fieldManageability>
        <label>Field API Name</label>
        <length>255</length>
        <required>false</required>
        <type>Text</type>
        <unique>false</unique>
        <description>Field API name on Rule__c object. Only applicable for Categories.</description>
    </fields>
    
    <!-- Is Active Field -->
    <fields>
        <fullName>IsActive__c</fullName>
        <defaultValue>true</defaultValue>
        <externalId>false</externalId>
        <fieldManageability>DeveloperControlled</fieldManageability>
        <label>Is Active</label>
        <required>false</required>
        <type>Checkbox</type>
    </fields>
    
    <!-- Sort Order Field -->
    <fields>
        <fullName>Sort_Order__c</fullName>
        <externalId>false</externalId>
        <fieldManageability>DeveloperControlled</fieldManageability>
        <label>Sort Order</label>
        <precision>3</precision>
        <required>false</required>
        <scale>0</scale>
        <type>Number</type>
        <unique>false</unique>
    </fields>

    <!-- Days Before Field -->
<fields>
    <fullName>Days_Before__c</fullName>
    <externalId>false</externalId>
    <label>Days Before</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
    <description>Number of days before case creation</description>
</fields>
<!-- Add this field to the existing Trigger_Config__mdt.object-meta.xml -->
<fields>
    <fullName>Rendering_Type__c</fullName>
    <externalId>false</externalId>
    <fieldManageability>DeveloperControlled</fieldManageability>
    <label>Rendering Type</label>
    <required>false</required>
    <type>Picklist</type>
    <valueSet>
        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>Searchable Dropdown</fullName>
                <default>true</default>
                <label>Searchable Dropdown</label>
            </value>
            <value>
                <fullName>Manual Input</fullName>
                <default>false</default>
                <label>Manual Input</label>
            </value>
        </valueSetDefinition>
    </valueSet>
</fields>
</CustomObject>